<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_gravity="top"
        android:layout_marginBottom="@dimen/dp_15">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/continue_with"
            android:textColor="#3700B3"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/sim_one"
            android:layout_marginTop="@dimen/dp_20"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sim_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/drawabletextsize"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center|left"
            android:padding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_8"
            android:text=""
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:layout_below="@+id/content"
            tools:ignore="RtlHardcoded"
            android:layout_marginTop="@dimen/dp_15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sim_two"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/drawabletextsize"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center|left"
            android:padding="@dimen/dp_5"
            android:paddingStart="@dimen/dp_8"
            android:text=""
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:layout_below="@+id/sim_one"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tryItAnother_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center"
            android:text="@string/tryit_another"
            android:textColor="#3700B3"
            android:textSize="@dimen/sp_18"
            android:layout_below="@+id/sim_two"
            android:layout_alignParentEnd="true">
        </androidx.appcompat.widget.AppCompatTextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</layout>