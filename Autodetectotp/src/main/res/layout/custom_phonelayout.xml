<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_gravity="top"
        android:layout_marginBottom="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Continue with"
            android:textColor="#3700B3"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/sim_one"
            android:layout_marginTop="20dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sim_one"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/drawabletextsize"
            android:drawablePadding="15dp"
            android:gravity="center|left"
            android:padding="5dp"
            android:paddingLeft="8dp"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/content"
            tools:ignore="RtlHardcoded"
            android:layout_marginTop="15dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sim_two"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/drawabletextsize"
            android:drawablePadding="15dp"
            android:gravity="center|left"
            android:padding="5dp"
            android:paddingStart="8dp"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/sim_one"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tryItAnother_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="@string/tryit_another"
            android:textColor="#3700B3"
            android:textSize="18dp"
            android:layout_below="@+id/sim_two"
            android:layout_alignParentEnd="true">

        </androidx.appcompat.widget.AppCompatTextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
